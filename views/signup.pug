html
    head 
        title Sign up
        link(rel="stylesheet", href="/styles/styles.css")
    body.bg-gray-300
        div(class='text-xs md:text-base flex flex-col items-center justify-center h-screen')
            div.bg-blue-500.my-20.border.rounded-3xl.p-6

                div.flex.justify-center.uppercase.font-bold.text-white
                    H3 Sign up
                br
                div
                    form(action = "/signup" method = "POST")
                        input(name = "id" type = "text" required placeholder = "Name" class="mb-3 p-2 rounded-full")
                        br 
                        input(name = "password" type = "password" required placeholder = "Password" class="mb-3 p-2 rounded-full")
                        br
                        input(name = "confirmPassword" type = "password" required placeholder = "Confirm Password" class="mb-3 p-2 rounded-full")
                        br
                        div.flex.justify-center.mb-5
                            button(type = "Submit" class="bg-green-600 text-white px-4 py-2 rounded-full border border-blue-900 hover:bg-green-800") Sign up

                nav.flex.justify-center.mb-5
                    a(href='/login' class=" bg-green-600 text-white px-4 py-1 rounded-full cursor-pointer border border-blue-900 hover:bg-green-800") Login 
                br
                if(message)
                    h.text-white #{message}