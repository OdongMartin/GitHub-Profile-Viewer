html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title GitHub Profile Viewer
        link(rel="manifest" href="./manifest.json")
        style 
            include ../public/styles/styles.css
            
    body(class=`${theme}`)
        div.flex.grid.grid-cols-3
        
            div.p-2
