                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 01-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 011.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 00-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 01-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 00-3.375-3.375h-1.5a1.125 1.125 0 01-1.125-1.125v-1.5a3.375 3.375 0 00-3.375-3.375H9.75" />
                            </svg>
                            a(href="/api/documentation" class="text-blue-500 hover:font-bold text-xs md:text-base") Documentation

                        div.flex.items-center
                            a(href="/api/feedback" class="text-blue-500") <svg class='w-4 md:w-5 inline-block' xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                            </svg>
                            a(href="/api/feedback" class="text-blue-500 hover:font-bold text-xs md:text-base") Feedback
                        
                        if(loggedIn)
                            div.flex.items-center
                                a(href="/logout" class="text-red-500") <svg class='w-4 md:w-5 inline-block' xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75" />
                                </svg>
                                a(href="/logout" class="text-red-500 hover:font-bold text-xs md:text-base") Logout

                        if(!loggedIn)
                            div.flex.items-center
                                a(href="/login" class="text-blue-500") <svg class='w-4 md:w-5 inline-block' xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
                                </svg>
                                a(href="/login" class="text-blue-500 hover:font-bold text-xs md:text-base") Login

                            div.flex.items-center
                                a(href="/signup" class="text-blue-500") <svg class='w-4 md:w-5 inline-block' xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                </svg>
                                a(href="/signup" class="text-blue-500 hover:font-bold text-xs md:text-base") Signup
            div
                header
                    div.p-2.flex.justify-center
                        span(class="text-sm md:text-2xl font-bold") GitHub Profile Viewer
                    
                    div.p-2.flex.justify-center
                        form(action="/api" method="POST") 
                            input(type="text", name="username", id="username", placeholder="Github Username" class="p-2 mb-3 border-2 border-black rounded-full text-black text-xs md:text-base bg-gray-300")
                            button(type="submit" class=" bg-green-600 text-white px-4 py-1 rounded-full cursor-pointer border border-blue-900 hover:bg-green-800 ml-2 text-xs md:text-base") Fetch Profile
                    div(class= "text-xs md:text-base p-2 flex justify-center")
                        if(message)
                            p(class = "text-red-600") #{message}

        main.flex.justify-center.p-2
            block content
            br
        script.
            const menuButton = document.querySelector('#menuButton');
            const menu = document.querySelector('#menu');

            menuButton.addEventListener('click', function(){
                if(menu.classList.contains('hidden')){
                    menu.classList.remove('hidden');
                } else {
                    menu.classList.add('hidden')
                }
            })
            
